---
interface Props {
  title: string;
  description: string;
  imageSrc: string;
  reverse?: boolean; // To alternate image/text alignment
}

const { title, description, imageSrc, reverse = false } = Astro.props;
---

<div class={`flex flex-col md:flex-row items-center bg-warm-white p-8 rounded-lg shadow-lg border border-primary-purple/10 gap-8 ${reverse ? 'md:flex-row-reverse' : ''}`}>
  <div class="md:w-1/3">
    <img src={imageSrc} alt={title} class="w-full h-64 rounded-md object-cover">
  </div>
  <div class="md:w-2/3">
    <h3 class="text-2xl font-bold text-primary-purple mb-4">{title}</h3>
    <p class="text-base text-primary-purple/80">{description}</p>
  </div>
</div>
