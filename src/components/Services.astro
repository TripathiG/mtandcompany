---
import ServiceCard from './ServiceCard.astro';
import { Building, Rocket, ClipboardCheck, BookUser, Search } from 'lucide-react';
---

<section id="services" class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">Our Services</h2>
    <div class="flex flex-wrap justify-center gap-8">
      <ServiceCard
        title="Company Formation"
        icon={Building}
        href="/services"
      />
      <ServiceCard
        title="Start-up Advisory"
        icon={Rocket}
        href="/services"
      />
      <ServiceCard
        title="Auditing"
        icon={ClipboardCheck}
        href="/services"
      />
      <ServiceCard
        title="Accounting"
        icon={BookUser}
        href="/services"
      />
      <ServiceCard
        title="Financial Due Diligence"
        icon={Search}
        href="/services"
      />
    </div>
  </div>
</section>
