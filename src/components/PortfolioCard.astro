---
interface Props {
  title: string;
  imageUrl: string;
}

const { title, imageUrl } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden">
  <img src={imageUrl} alt={title} class="w-full h-48 object-cover">
  <div class="p-6">
    <h3 class="text-xl font-bold text-primary-purple">{title}</h3>
  </div>
</div>
