---
import WhoWeServeCard from './WhoWeServeCard.astro';
---

<section id="who-we-serve" class="py-20 bg-gray-100">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">Who We Serve</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <WhoWeServeCard
        title="Startups"
        imageUrl="https://placehold.co/600x400/a855f7/ffffff?text=Startups"
      />
      <WhoWeServeCard
        title="Small & Medium Businesses"
        imageUrl="https://placehold.co/600x400/a855f7/ffffff?text=SMBs"
      />
      <WhoWeServeCard
        title="Enterprises"
        imageUrl="https://placehold.co/600x400/a855f7/ffffff?text=Enterprises"
      />
    </div>
  </div>
</section>
