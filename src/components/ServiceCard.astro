
---
import type { Component } from 'astro';

interface Props {
  title: string;
  description: string;
  icon: Component;
  details: string[];
}

const { title, description, icon: Icon, details } = Astro.props;
---

<div class="bg-primary-purple text-warm-white p-6 rounded-lg shadow-lg h-full flex flex-col">
  <div class="flex items-center mb-4">
    <Icon class="w-10 h-10 text-accent-purple mr-4 flex-shrink-0" />
    <h3 class="text-xl font-bold">{title}</h3>
  </div>
  <p class="mb-4 flex-grow text-sm">{description}</p>
  <ul class="list-disc list-inside mb-6 space-y-2 text-sm">
    {details.map((detail) => (
      <li>{detail}</li>
    ))}
  </ul>
  <div class="mt-auto">
      <a href="#" class="bg-warm-white text-primary-purple font-bold py-2 px-4 rounded-full hover:bg-opacity-90 transition duration-300">
        Learn More
      </a>
  </div>
</div>
