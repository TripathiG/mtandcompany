---
import { Send } from 'lucide-react';
---

<section id="contact" class="py-20">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">Contact Us</h2>
    <div class="grid md:grid-cols-2 gap-24 items-start">
      
      <!-- Contact Form -->
      <form>
        <div class="grid md:grid-cols-2 gap-4 mb-4">
          <input type="text" placeholder="Your Name" class="bg-white p-4 rounded-lg w-full shadow-lg">
          <input type="email" placeholder="Your Email" class="bg-white p-4 rounded-lg w-full shadow-lg">
        </div>
        <textarea placeholder="Your Message" class="bg-white p-4 rounded-lg w-full mb-4 shadow-lg" rows="6"></textarea>
        <div class="flex justify-center">
          <button type="submit" class="bg-accent-green text-white font-bold py-3 px-8 rounded-full hover:bg-accent-green/80 transition-colors flex items-center">
            Send Message <Send className="ml-2" />
          </button>
        </div>
      </form>

      <!-- Address and Social Media -->
      <div class="text-center">
        <div>
          <h3 class="text-2xl font-bold mb-4">Head Office</h3>
          <p>P-20, Ground Floor, South Extention - II</p>
          <p>New Delhi - 110049</p>
          <p class="mt-4"><strong>Tel.:</strong> 011-40581276 (10 AM - 06 PM)</p>
          <p><strong>Mob:</strong> +91-96500-67855</p>
          <p><strong>Email:</strong> mtdelhi15@gmail.com</p>
        </div>

        <div class="mt-8">
          <h3 class="text-2xl font-bold mb-4">Follow Us</h3>
          <div class="flex justify-center space-x-4">
            <a href="#" class="text-primary-purple hover:text-accent-green" aria-label="Facebook">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z" />
              </svg>
            </a>
            <a href="#" class="text-primary-purple hover:text-accent-green" aria-label="LinkedIn">
              <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
                <path d="M4.98 3.5c0 1.381-1.11 2.5-2.48 2.5s-2.48-1.119-2.48-2.5c0-1.38 1.11-2.5 2.48-2.5s2.48 1.12 2.48 2.5zm.02 4.5h-5v16h5v-16zm7.982 0h-4.98v16h4.98v-8.396c0-2.006 1.806-2.006 1.806 0v8.396h4.98v-10.396c0-5.46-4.47-5.46-4.47 0v2z" />
              </svg>
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
