
---
interface Props {
  name: string;
  role: string;
  bio: string;
}

const { name, role, bio } = Astro.props;
---

<div class="bg-warm-white p-6 rounded-lg shadow-md">
  <img src="https://via.placeholder.com/150" alt={name} class="w-24 h-24 rounded-full mx-auto mb-4">
  <h3 class="text-xl font-bold text-center mb-2">{name}</h3>
  <p class="text-center text-accent-purple mb-4">{role}</p>
  <p class="text-center">{bio}</p>
</div>
